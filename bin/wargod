#!/usr/bin/env python
# -*- coding: utf-8 -*-

from argparse import ArgumentParser

try:
    from wargod import run, __version__
    from wargod.config import config
except ImportError:
    import sys, os
    sys.path.append(os.path.split(os.path.split(os.path.realpath(__file__))[0])[0])
    from wargod import run, __version__
    from wargod.config import config

# clean stop on KeyboardInterrupt
from signal import signal, SIGINT

def stop(signum, frame):
        exit(0)

signal(SIGINT, stop)

if __name__ == '__main__':
    parser = ArgumentParser('wargod')
    # Standards rsstail parameters
    parser.add_argument('-a', '--argument', help='an example argument')

    options = parser.parse_args()

    if options.argument:
        config.argument = options.argument

    run()
